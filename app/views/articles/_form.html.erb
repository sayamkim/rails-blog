<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "shadow-sm p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <div class="col-2">
            <%= f.label :title, class: "col-form-label text-light" %> 
          </div>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>    
          </div>
        </div>
        <div class="form-group row">
          <div class="col-2">
            <%= f.label :description, class: "col-form-label text-light" %> 
          </div>
          <div class="col-10">
            <%= f.text_area :description, rows: 5, class: "form-control shadow rounded", placeholder: "Article description" %>    
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to '[ Return to articles list ]', articles_path, class: "text-info" %>
  </div>
</div>
