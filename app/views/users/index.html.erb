<h1 class="text-center mt-4">Bloggers</h1>
<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>
<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to user.username, user %>
          </div>
          <div class="card-body">
            <p class="card-text"><%= pluralize(user.articles.count, "articles") %></p>
            <button type="button" class="btn btn-outline-success"><%= link_to "View", user %></button>
            <% if logged_in? && user == current_user %>
              <button type="button" class="btn btn-outline-primary"><%= link_to 'Edit', edit_user_path(user) %></button>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>