<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow-sm p-3 mb-3 light-bg rounded", local: true) do |f| %>
        <div class="form-group row">
          <div class="col-2">
            <%= f.label :username, "username", class: "col-form-label courier font-weight-bold" %> 
          </div>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "enter a username" %>    
          </div>
        </div>
        <div class="form-group row">
          <div class="col-2">
            <%= f.label :email, "email", class: "col-form-label courier font-weight-bold" %> 
          </div>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "enter your email" %>    
          </div>
        </div>
        <div class="form-group row">
          <div class="col-2">
            <%= f.label :password, "password", class: "col-form-label courier font-weight-bold" %> 
          </div>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "choose a password" %>    
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-dark btn-small") %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to '[ Return to articles list ]', articles_path, class: "helvetica-neue font-dark-gray" %>
  </div>
</div>