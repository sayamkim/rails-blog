<h1 class="text-center mt-4 helvetica neue font-dark-gray">categories</h1>
<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>
<div class="container">
  <% @categories.each do |category| %>
    <div class="row justify-content-md-center">
      <div class="col-6 mt-4">
        <%# <div class="border-light-gray shadow mb-5 bg-white rounded"> %>
          <div class="ml-4 pt-4 helvetica-neue font-dark-gray">
            <p class="font-weight-bold mb-0"><%= link_to category.name, category_path(category) %></p>
            <p class="courier mb-1"><small>Created <%= time_ago_in_words(category.created_at) %> ago, Last updated <%= time_ago_in_words(category.updated_at) %> ago</small></p>
            <p class="card-text pb-4"><%= pluralize(category.articles.count, "article") %></p>
          </div>
          <div class="ml-4 solid-border"></div>
        <%# </div> %>
      </div>
    </div>
  <% end %>
</div>
<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>