<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow-sm p-3 mb-3 light-bg rounded", local: true) do |f| %>
  <div class="form-group row">
    <div class="col-2">
      <%= f.label :name, "category", class: "col-form-label courier font-weight-bold" %> 
    </div>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "enter a category" %>    
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <%= f.submit class: "btn btn-outline-dark btn-small" %>
  </div>
<% end %>