<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow-sm p-3 mb-3 bg-info rounded", local: true) do |f| %>
  <div class="form-group row">
    <div class="col-2">
      <%= f.label :name, "Category name", class: "col-form-label text-light" %> 
    </div>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category" %>    
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <%= f.submit class: "btn btn-outline-light btn-lg" %>
  </div>
<% end %>